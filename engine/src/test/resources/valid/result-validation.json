{
  "META": {
    "dslVersion": "v2",
    "name": "test.result.validation",
    "targetAspect": "urn:test:result"
  },
  "ENGINE": {
    "api": "v2",
    "output": "$MAPPINGS.root",
    "validation": "$SCHEMA.output"
  },
  "INPUT": {},
  "SCHEMA": {
    "output": {
      "ref": "classpath:test-schemas/output-schema.json",
      "dialect": "http://json-schema.org/draft-07/schema#",
      "strict": true
    }
  },
  "FUNCTIONS": {},
  "VARIABLES": {
    "value": {
      "type": "string",
      "required": true
    }
  },
  "MAPPINGS": {
    "root": {
      "REF": "root",
      "MAP": {
        "value": "$VARIABLES.value"
      }
    }
  },
  "VALIDATION": {
    "result": {
      "schema": "$SCHEMA.output",
      "phase": "post-map"
    }
  }
}

